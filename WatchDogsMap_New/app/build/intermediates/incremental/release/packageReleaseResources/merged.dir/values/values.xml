    <string name="app_name">WatchDogs Map</string>
    <style name="Theme.WatchDogsMap" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        
        <item name="colorPrimary">@color/hacker_cyan_accent</item>
        <item name="colorPrimaryVariant">@color/hacker_lime_accent</item>
