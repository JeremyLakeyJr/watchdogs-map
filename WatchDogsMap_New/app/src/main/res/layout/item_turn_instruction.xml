<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/hacker_dark_surface"
    android:padding="8dp">

    <ImageView
        android:id="@+id/turn_icon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/ic_turn_straight"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/turn_instruction"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:fontFamily="@font/share_tech_mono"
        android:textColor="@color/hacker_text_primary"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/turn_icon"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Turn left on Main St." />

</androidx.constraintlayout.widget.ConstraintLayout>